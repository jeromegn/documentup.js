doctype html
html
  head

    //- Document Settings
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    //- Referrer
    meta(name="referrer" content="origin")

    //- Mobile
    meta(name="HandheldFriendly" content="True")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    title DocumentUp &middot; Automatically generated documentation sites for your markdown files

    //- Stylesheets
    link(rel="stylesheet" type="text/css" href="/screen.css" media="all")

  body
    #container
      #nav
        #header
          a(href="#" id="logo")= repository.displayName()
        #sections.section
          ul.section-nav
            each navItem in tableOfContents
              li(class=`h${navItem.level}`)
                a(href=`#${navItem.id}`) #{navItem.text}
      #content
        block content