doctype html
html
  head

    //- Document Settings
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    //- Referrer
    meta(name="referrer" content="origin")

    //- Mobile
    meta(name="HandheldFriendly" content="True")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    title DocumentUp &middot; Automatically generated documentation sites for your markdown files

    //- Stylesheets
    link(rel="stylesheet" type="text/css" href="/screen.css" media="all")

  body.app

    //- Main content
    main(role="main")
      section.view-content
        nav.secondary-content
          a(href="#" id="logo")= repository.displayName()
          each navItem in tableOfContents
            a(href=`#${navItem.id}`) #{navItem.text}
        //- section.primary-content
        block content